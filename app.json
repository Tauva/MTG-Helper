{
  "expo": {
    "name": "MTG Collection",
    "slug": "mtg-collection-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#121212"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mtgcollection.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan Magic: The Gathering cards"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#121212"
      },
      "package": "com.mtgcollection.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow MTG Collection to access your camera to scan cards."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow MTG Collection to access your photos to import card images."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "dc91d743-6812-4cc0-a947-dfa53f2254d8"
      }
    }
  }
}
